{
  "name": "stripe-angular",
  "version": "1.7.0",
  "description": "Angular to Stripe module containing useful providers, components, and directives",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "npm-run-all build:dist:js update:dist",
    "update:dist": "node scripts/update-dist-package.js",
    "build:dist:js": "ng-packagr -p package.json",
    "test:watch": "ng test",
    "save": "git add . && git commit -m 'update' && git push",
    "watch": "npm-run-all --parallel compile:templates watch:templates watch:js",
    "test": "ng test src --browsers PhantomJS --watch=false",
    "copy:dist": "cp -R dist/. ../dist",
    "save:deploy": "npm-run-all save deploy",
    "deploy": "npm-run-all build deploy:npm deploy:gh-pages",
    "deploy:npm": "npm run save:dist && cd ../dist/ && npm publish",
    "save:dist": "npm run copy:dist && cd ../dist/ && git add . && git commit -m 'update' && git push",
    "deploy:gh-pages": "cd ../gh-pages && rm -rf node_modules && rm -f package-lock.json && npm install && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AckerApple/stripe-angular.git"
  },
  "keywords": [
    "stripe",
    "angular",
    "credit",
    "debit",
    "card",
    "payment",
    "gateway"
  ],
  "author": "Acker Apple",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AckerApple/stripe-angular/issues"
  },
  "homepage": "https://github.com/AckerApple/stripe-angular#readme",
  "peerDependencies": {
    "@types/stripe-v3": "^3.1.23"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.2.18",
    "@angular/cli": "~12.2.18",
    "@angular/common": "~12.2.17",
    "@angular/compiler": "~12.2.17",
    "@angular/compiler-cli": "~12.2.17",
    "@angular/core": "~12.2.17",
    "@angular/platform-browser": "~12.2.17",
    "@angular/platform-browser-dynamic": "~12.2.17",
    "@types/stripe-v3": "^3.1.23",
    "@types/jasmine": "^3.6.2",
    "jasmine": "^3.6.3",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "karma-phantomjs-launcher": "^1.0.4",
    "ng-packagr": "^12.2.7",
    "npm-run-all": "^4.1.5",
    "phantomjs-prebuilt": "^2.1.16",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "ts-helpers": "^1.1.2",
    "typescript": "4.3.5",
    "zone.js": "~0.11.8"
  },
  "private": true,
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts"
    }
  }
}