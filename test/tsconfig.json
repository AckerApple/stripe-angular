{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers" :true,
    "lib": ["es2015", "dom"],
    "types": [
      "jasmine"
    ],
    "mapRoot": "./",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./temp/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": [
    "./test.ts",
    "./polyfills.ts",
    "../src/**/*.spec.ts"
  ]
}
